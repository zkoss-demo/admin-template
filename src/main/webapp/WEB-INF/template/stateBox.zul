<zk xmlns:n="native">
    <n:div class="state-box shadow rounded p-1 ${color}">
        <n:div class="row w-100">
            <n:div class="col-8 info px-4">
                <n:div class="text-black-50">${state.type}</n:div>
                <n:h4>${state.value}</n:h4>
                <label sclass="text-success" value="@init(state.ratio)@converter('org.zkoss.admin.ecommerce.util.PercentageConverter')"/>
            </n:div>
            <n:div class="col-4 text-right px-3">
                <n:h2>
                <n:i class="${icon} text-black-50"/>
                </n:h2>
            </n:div>
        </n:div>
    </n:div>
</zk>